<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    card_view:cardCornerRadius="10dp"
    android:layout_marginTop="80dp"
    card_view:cardBackgroundColor="@color/colorFondo" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding= "20dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/titulo_fenomeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tv_id"
                android:text="Fenomeno:"
                android:textStyle="bold"
                android:textColor="@color/colorNegro" />

            <TextView
                android:id="@+id/tv_fenomeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/tv_id"
                android:layout_toEndOf="@+id/titulo_fenomeno" />

            <TextView
                android:id="@+id/titulo_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tv_fenomeno"
                android:text="Descripcion:"
                android:textStyle="bold"
                android:textColor="@color/colorNegro" />

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/tv_fenomeno"
                android:layout_toEndOf="@+id/titulo_descripcion" />

            <TextView
                android:id="@+id/titulo_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/titulo_descripcion"
                android:text="Fecha:"
                android:textStyle="bold"
                android:textColor="@color/colorNegro" />

            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/titulo_descripcion"
                android:layout_toEndOf="@+id/titulo_fecha" />

            <TextView
                 android:id="@+id/titulo_nc"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                 android:layout_below="@+id/titulo_fecha"
                 android:text="Nivel Critico:"
                 android:textStyle="bold"
                 android:textColor="@color/colorNegro" />

            <TextView
                android:id="@+id/tv_nivelCritico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/titulo_fecha"
                android:layout_toEndOf="@+id/titulo_nc" />

            <TextView
                 android:id="@+id/titulo_localidad"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                 android:layout_below="@+id/titulo_nc"
                 android:text="Localidad:"
                 android:textStyle="bold"
                 android:textColor="@color/colorNegro" />

            <TextView
                android:id="@+id/tv_localidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/titulo_nc"
                android:layout_toEndOf="@+id/titulo_localidad" />

            <TextView
                 android:id="@+id/titulo_ll"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Latitud, Longitud y Altitud:"
                 android:layout_gravity="center"
                 android:layout_below="@+id/titulo_localidad"
                 android:textStyle="bold"
                 android:textColor="@color/colorNegro" />

            <TextView
                android:id="@+id/tv_latitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:layout_below="@+id/titulo_ll"/>

            <TextView
                android:id="@+id/tv_longitud"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/titulo_ll"
                android:layout_toEndOf="@+id/tv_latitud"/>

            <TextView
                android:id="@+id/tv_altitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/titulo_ll"
                android:layout_toEndOf="@+id/tv_longitud" />

            <TextView
                android:id="@+id/titulo_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tv_longitud"
                android:text="Registrado por:"
                android:textStyle="bold"
                android:textColor="@color/colorNegro" />

            <TextView
                android:id="@+id/tv_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/tv_longitud"
                android:layout_toEndOf="@+id/titulo_usuario" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>